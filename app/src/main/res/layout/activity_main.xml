<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/SERVER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="SERVER"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/server_port_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SERVER"
            android:hint="Port                                  " />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SERVER"
            android:layout_toRightOf="@id/server_port_edit_text"
            android:text="CONNECT" />

        <TextView
            android:id="@+id/CLIENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connect_button"
            android:layout_centerInParent="true"
            android:text="CLIENT"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/client_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CLIENT"
            android:hint="Address                       " />

        <EditText
            android:id="@+id/client_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CLIENT"
            android:layout_toRightOf="@id/client_address"
            android:hint="Port                                    " />

        <EditText
            android:id="@+id/client_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_address"
            android:hint="Word           " />

        <Button
            android:id="@+id/get_weather_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_port"
            android:layout_toRightOf="@id/client_city"
            android:text="Lookup " />

        <EditText
            android:id="@+id/word_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_weather_button"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>